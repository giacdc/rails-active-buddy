<div class= "user-card-profile">
  <div class="user-card-profile-section">
    <div class="user-avatar">
      <%= image_tag "louisa.jpg", class: "show-avatar", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="user-details">
           <h2 id="username-profile"> Hi <%= @user.username %>!</h2>
            <p class="btn-edit align-self-center p-3"><i class="fa-solid fa-pen" style="color: #31393c;"></i> <span class ="align-middle"> Edit profile</span></p>
      </div>
    </div>
<div class="user-card-preferred-sports">
    <% @user.preferred_sports.first(4).each_with_index do |preferred_sport, index| %>
      <div class="user-card-preferred-sport">
        <i class="fa-solid <%= Sport::ICON_CLASS[preferred_sport.sport.name.to_sym]%>"></i>
      </div>
    <% end %>
</div>

<div class="user-activity">
    <h2> Your activity </h2>
</div>

