<% if user_signed_in? %>
  <div class="welcome">
    <h1>Welcome back <%= current_user.username %>!</h1>
  </div>
<% end %>
<p><%= Event.first.title %></p>
<div class="section">
  <div class="section-title">
    <div>
      <h2>Plan your next training</h2>
    </div>
    <div class="btn-amaranth-small">
      <% if user_signed_in? %>
        <%= link_to "See more", "#" %>
      <% else %>
        <div class="icon-lock-black"></div>
      <% end %>
    </div>
  </div>
  <div class="small-cards-list">
    <%= link_to root_path, class:"event-card" do %>
      <div class="event-card" style="background-image: radial-gradient(circle, rgba(50, 50, 50, 0.5), rgba(0, 0, 0, 0.8)), url(<%= image_path(Sport::IMAGES[Event.last.sport.name.to_sym]) %>)">
        <h3><%= Event.last.title %></h3>
      </div>
    <% end %>
  </div>
</div>
<h2>Buddies available now near you</h2>
<h2>Last buddies you trained with</h2>
