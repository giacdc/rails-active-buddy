<h2>Log in</h2>
<div class="login-session-container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, id: "remember-me-checkbox", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", id: "btn-login-in" %>
    </div>
  <% end %>
</div>

<div class="sign-up-and-forgot-password-container">
  <%= render "devise/shared/links" %>
</div>
